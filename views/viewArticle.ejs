<%- include ('partials/header') %>

<!-- Articles Start -->
<div class="container-fluid pt-5 pb-3">
    <div class="row px-xl-5">
      <% record.forEach(function(records){ %>
        <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
            <div class="product-item bg-light mb-4">
                <div class="product-img position-relative overflow-hidden">
                    <a href="/admin/details/<%= records.slug %>"><img src="data:image/<%=records.upload.contentType%>;base64,<%=records.upload.data.toString('base64')%>" class="card-img-top" alt="..." width="200" height="200"></a>                  
                </div>
                <div class="text-center py-4">
                    <a class="h3 text-decoration-none align-items-center justify-content-center " href="/admin/details/<%= records.slug %>"><%= records.title %></a>
                    <div class="d-flex align-items-center justify-content-center mt-2">
                        <h6><%= records.subtitle %></h6>
                        
                    </div>
                    <div class="d-flex align-items-center justify-content-center mt-2">
                        <a href="/admin/details/<%= records.slug %>" class="btn btn-info"> Read More </a>
                        <a href="/admin/editLat/<%= records._id %>" class="btn btn-primary">Edit</a>
                        <a href="/admin/<%= records._id %>" class="btn btn-danger">Delete</a><br>
                    </div>
                    <div class="d-flex align-items-center justify-content-center mb-1">
                        <small>Posted On: <%= records.date.toLocaleDateString() %></small>
                    </div>
                </div>
            </div>
        </div> 
        <% }) %>
    </div>
  </div>
  <!-- Articles End -->
  

  <%- include ('partials/footer') %>
